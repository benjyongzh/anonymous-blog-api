extends layout

block content
  div(class="d-flex flex-column align-items-stretch justify-content-center container" style="max-width: 900px")
    h3(class="text-center m-4") Create a post

    form(method="POST" action ="")

      div(class="mt-3 form-group")
        div(class="form-floating mb-1")
          input#title(class="form-control" type="text" placeholder="Post Title Here" name="title" required='true' value=(undefined===post ? "" : post.title))
          label(class="mt-1" for="title") Title of Post
        p(class="mt-1") &nbsp;
          if errors 
            for error in errors 
              if error.path==="title"
                span(class='text-danger') #{error.msg}

      div(class="mt-3 form-group")
        div(class="form-floating mb-1")
          textarea#text(class="form-control" type='textarea', placeholder="Maximum of 300 characters" style="height: 250px" name='text') #{undefined===post ? "" : post.text}
          label(class="mt-1" for='text') Text
        p(class="mt-1") &nbsp;
          if errors 
            for error in errors 
              if error.path==="text"
                span(class='text-danger') #{error.msg}

      div(class="d-flex justify-content-center mt-2")
        button(class="w-100 btn btn-primary me-3" type='submit' style="max-width: 250px") Submit
        a(class="w-100 btn btn-outline-secondary ms-3" href=backURL type='button' style="max-width:250px") Cancel

      

