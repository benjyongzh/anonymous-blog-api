extends layout

block content
  div(class="d-flex flex-column align-items-stretch justify-content-center container" style="max-width: 380px")
    h3(class="m-4 text-center") Log In

    form(method="POST" action ="")
      div(class="mt-3 form-group")
        label(class="form-label mb-1" for="username") Username: 
        input#username.form-control(type="text" placeholder="Username Here" name="username" required='true' value=(undefined===signing_user ? "" : signing_user.username))
        p &nbsp;
          if errors 
            for error in errors 
              if error.path==="username"
                span(class='text-danger') #{error.msg}

      div(class="mt-2 form-group")
        label(class="form-label mb-1" for="password") Password:
        input#password.form-control(type="password" name="password" required='true')
        p &nbsp;
          if errors 
            for error in errors 
              if error.path==="password"
                span(class='text-danger') #{error.msg}

      p &nbsp;
        if errors 
          for error in errors 
            if error.path==="generic"
              span(class='text-danger') #{error.msg}

      div(class="mt-2 text-center form-group")
        button(class="w-100 btn btn-primary" type='submit') Submit

        

    p(class="mt-2") Not signed up yet? Create an account 
      a(href='/auth/signup') here
      span .

