extends layout

block content
  div(class="d-flex flex-column align-items-stretch justify-content-center container" style="max-width: 380px")
    h3(class="m-4 text-center") Log In

    form(method="POST" action ="")
      div(class="mt-3 form-group")
        div(class="form-floating mb-1")
          input#username(class="form-control" type="text" placeholder="thisismyusername123" name="username" required='true' value=(undefined===signing_user ? "" : signing_user.username))
          label(class="mt-1" for="username") Username
        p(class="mt-1") 
          if errors 
            for error in errors 
              if error.path==="username"
                span(class='text-danger') #{error.msg}
              else
                span &nbsp;
          else
            span &nbsp;

      div(class="mt-2 form-group")
        div(class="form-floating mb-1")
          input#password(class="form-control" type="password" name="password" placeholder="password" required='true')
          label(class="mt-1" for="password") Password
        p(class="mt-1") 
          if errors 
            for error in errors 
              if error.path==="password"
                span(class='text-danger') #{error.msg}
              else
                span &nbsp;
          else
            span &nbsp;

      p 
        if errors 
          for error in errors 
            if error.path==="generic"
              span(class='text-danger') #{error.msg}
            else
              span &nbsp;
        else
          span &nbsp;

      div(class="mt-2 text-center form-group")
        button(class="w-100 btn btn-primary" type='submit') Submit

        

    p(class="mt-2") Not signed up yet? Create an account 
      a(href='/auth/signup') here
      span .

