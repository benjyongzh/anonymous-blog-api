extends layout

block content
  div(class="d-flex flex-column align-items-stretch justify-content-center container" style="max-width: 380px")
    h3(class="m-4 text-center") Update Membership

    form(method="POST" action ="")
      div(class="mt-3 form-group")
        label(class="form-label mb-1" for="member_status") Membership Status: 
        select#member_status(class="form-select form-control" name="member_status" required='true')
          option(value="Basic" selected=(userToLookAt.member_status==="Basic")) Basic
          option(value="Premium" selected=(userToLookAt.member_status==="Premium")) Premium
          option(value="Admin" selected=(userToLookAt.member_status==="Admin")) Admin
        if errors 
          for error in errors 
            p(class='text-danger') #{error.msg}

      div(class="d-flex justify-content-center mt-4")
        button(class="w-100 btn btn-primary me-3" type='submit' style="max-width: 250px") Submit
        a(class="w-100 btn btn-outline-secondary ms-3" href=user.url type='button' style="max-width:250px") Cancel

